<h1>All Items</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
     <th>Title</th>
     <th>Category</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <%Item.all.each do |item|%>
        <tr>
        <td><%= item.title %></td>
        <td><%= item.category.title %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <%# <td><%= cl_image_tag(category.image.key, width: 200, height: 100, crop: :scale, effect: "cartoonify") if category.image.attached?%> </td> 
        <td> <%= image_tag (item.image.url),style:"width:50px" if item.image.present?%></td>
        <td><%= link_to 'Show', item_path(item)%> </td>
         <% if item.user.id == @user %>
        <td><%= link_to 'Edit', edit_item_path(item)%></td>
        <td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <%end%>
        </tr>
   </tbody>
   </table>
