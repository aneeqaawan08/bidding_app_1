<h3>List of Users</h3>

<html>
 <table class="table table-dark table-striped">
  <thead>
  <tr>
    <th> name </th>
    <th> phone_no </th>
    <th> email </th>
    <th> password </th>
    <th> password_confirmation</th>
    <th> image </th>  
  </tr>
  </thead>

  <tbody>
   <% @users.each do|user| %>
    <tr>
    <td> <%= user.name %></td> 
    <td> <%= user.phone_no %></td> 
    <td> <%= user.email %></td>
    <td> <%= user.password %></td>
    <td> <%= user.password_confirmation %></td>
    <td> <%= image_tag (user.image.url), style:"width:50px" if user.image.present? %> </td>
    <%# <td><button class="btn btn-danger" type="button" users_approve_path>Approve</button></td> %>
    <td><%= link_to 'Show', user_path(user) %> </td>   
    <td><%= link_to 'Edit', edit_user_registration_path(user)%></td> 
    <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>  
    </tr>
  <%end%>
    
    </tbody>
    </table>
</html>

