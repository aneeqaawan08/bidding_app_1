<h3>All Categories</h3>

<table class="table table-dark table-striped">
  <thead>
    <tr>
     <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <%Category.all.each do |category|%>
        <tr>
        <td><%= category.title%></td>
        <%# <td><%= cl_image_tag(category.image.key, width: 200, height: 100, crop: :scale, effect: "cartoonify") if category.image.attached?%> </td> 
        <td> <%= image_tag (category.image.url),style:"width:50px" if category.image.present?%></td>
        <td><%= link_to 'Show', category_path(category)%> </td>
        <td><%= link_to 'Edit', edit_category_path(category)%></td>
        <td><%= link_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        </tr>
   </tbody>
   </table>
